<body>
 <main>
     <p class= "flash_success"><%= notice %></p>
<div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        <table class="table">
          <tbody>
           <tr>
            <th>name</th>
            <th><%= @user.name %></th>
           </tr>
           <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
           </tr>
          </tbody>
        </table>
       <% if @user.id == current_user.id %>
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/<%= current_user.id %>/edit"></a>
       <% end %>

         <h3>New book</h3>
       <%= form_with model: @book, local:true do |f| %>
         <br><a>Title</a></br>
          <%= f.text_field :title %>
         <br><a>Opinion</a></br>
          <%= f.text_area :body %>
          <br><input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"><br>
       <% end %>
      </div>

         <div class="col-md-8 offset-md-1">
        <h2>Users</h2>

        <table class="table table-hover table-inverse">
         <thead>
          <tr>
           <th></th>
           <th>image</th>
           <th>name</th>
           <th colspan="3"></th>
          </tr>
         </thead>
         <tbody>
             <% @users.each do |user| %>
          <tr>
           <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: '60x60'%></th>
           <th><%=  user.name %></th>
           <th><%= link_to "Show", user_path(user) %></th>
          </tr>
            <% end %>
         </tbody>
        </table>
       </div>
     </div>
    </div>
  </main>
</body>

